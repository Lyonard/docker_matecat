version: '3.2'

networks:
  matecat-network:
    driver: bridge

services:
  filters:
    build: ./MateCatFilters/
    container_name: docker_matecat_filter
    ports:
      - 8732:8732
    networks:
       - matecat-network

  redis:
    image: redis
    ports:
      - 6379:6379
    networks:
       - matecat-network

  amq:
    build: ./AMQ/
    container_name: docker_amq
    ports:
      - 61613:61613
      - 8161:8161
    networks:
       - matecat-network

  mysql:
    build: ./MySQL/
    container_name: docker_mysql
    ports:
     - 3306:3306
    networks:
       - matecat-network

  matecat:
    build: ./MateCatApache/
    container_name: docker_matecat
    ## Remove this environment block if you don't need it ##
    environment:
      XDEBUG_CONFIG: <YOUR HOST IP HERE>
      FILTERS_ADDRESS: http://filters:8732/
      SMTP_HOST: 10.30.1.225
      SMTP_PORT: 2637
    ## Remove this environment block if you don't need it ##

    volumes:
      - ~/PhpstormProjects/matecat:/var/www/matecat:rw
    ports:
# docker_ports : machine_ports
      - 80:80
      - 443:443
      - 7788:7788
      - 22
    networks:
       - matecat-network
    links:
      - mysql
      - redis
      - amq
      - filters
